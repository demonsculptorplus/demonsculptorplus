import React, { useState, useEffect, useRef } from "react";
import { base44 } from "@/api/base44Client";
import { Button } from "@/components/ui/button";
import { Card, CardContent, CardHeader, CardTitle } from "@/components/ui/card";
import { Label } from "@/components/ui/label";
import { Textarea } from "@/components/ui/textarea";
import { Select, SelectContent, SelectItem, SelectTrigger, SelectValue } from "@/components/ui/select";
import { Upload as UploadIcon, File, Loader2, Flame, FileUp, AlertCircle, CheckCircle, ArrowLeft, Clock, Zap, HardDrive, RefreshCw } from "lucide-react";
import { motion } from "framer-motion";
import { useNavigate } from "react-router-dom";
import { createPageUrl } from "@/utils";

const MAX_FILE_SIZE = 600 * 1024 * 1024;

export default function Upload() {
  const navigate = useNavigate();
  const [projects, setProjects] = useState([]);
  const [customers, setCustomers] = useState([]);
  const [selectedProject, setSelectedProject] = useState("");
  const [file, setFile] = useState(null);
  const [description, setDescription] = useState("");
  const [isUploading, setIsUploading] = useState(false);
  const [uploadComplete, setUploadComplete] = useState(false);
  const [dragActive, setDragActive] = useState(false);
  const [error, setError] = useState("");
  const [uploadStatus, setUploadStatus] = useState("");
  const [elapsedTime, setElapsedTime] = useState(0);
  const [isLoading, setIsLoading] = useState(true);
  
  const timerRef = useRef(null);
  const uploadStartRef = useRef(null);

  useEffect(() => {
    const adminAuth = localStorage.getItem('dsp_admin_auth');
    if (adminAuth !== 'authenticated') {
      navigate(createPageUrl('AdminLogin'));
      return;
    }

    const loadData = async () => {
      try {
        const [projectsData, customersData] = await Promise.all([
          base44.entities.Project.filter({ status: 'active' }),
          base44.entities.Customer.list()
        ]);
        setProjects(projectsData);
        setCustomers(customersData);
      } catch (err) {
        console.error("Error loading data:", err);
        setError("Failed to load projects. Please refresh the page.");
      } finally {
        setIsLoading(false);
      }
    };

    loadData();
    
    return () => {
      if (timerRef.current) clearInterval(timerRef.current);
    };
  }, [navigate]);

  const getCustomerName = (customerId) => {
    const customer = customers.find(c => c.id === customerId);
    return customer ? customer.name : 'Unknown Customer';
  };

  const handleDrag = (e) => {
    e.preventDefault();
    e.stopPropagation();
    if (e.type === "dragenter" || e.type === "dragover") {
      setDragActive(true);
    } else if (e.type === "dragleave") {
      setDragActive(false);
    }
  };

  const handleDrop = (e) => {
    e.preventDefault();
    e.stopPropagation();
    setDragActive(false);
    const droppedFile = e.dataTransfer.files[0];
    if (droppedFile) validateAndSetFile(droppedFile);
  };

  const handleFileChange = (e) => {
    const selectedFile = e.target.files[0];
    if (selectedFile) validateAndSetFile(selectedFile);
  };

  const validateAndSetFile = (selectedFile) => {
    setError("");
    
    if (selectedFile.size > MAX_FILE_SIZE) {
      setError(`File is too large. Maximum size is 600MB. Your file is ${(selectedFile.size / (1024 * 1024)).toFixed(2)}MB.`);
      return;
    }

    const extension = selectedFile.name.split('.').pop().toLowerCase();
    if (!['glb', 'gltf'].includes(extension)) {
      setError("Only GLB and GLTF files are supported. Please convert your model.");
      return;
    }

    setFile(selectedFile);
  };

  const formatTime = (seconds) => {
    if (seconds < 60) return `${seconds}s`;
    const mins = Math.floor(seconds / 60);
    const secs = seconds % 60;
    return `${mins}m ${secs}s`;
  };

  const formatFileSize = (bytes) => {
    if (bytes === 0) return '0 Bytes';
    const k = 1024;
    const sizes = ['Bytes', 'KB', 'MB', 'GB'];
    const i = Math.floor(Math.log(bytes) / Math.log(k));
    return parseFloat((bytes / Math.pow(k, i)).toFixed(2)) + ' ' + sizes[i];
  };

  const getEstimatedTime = (fileSize) => {
    // Estimate based on ~1-2 MB/s average upload speed
    const seconds = Math.ceil(fileSize / (1.5 * 1024 * 1024));
    if (seconds < 60) return `~${seconds} seconds`;
    const mins = Math.ceil(seconds / 60);
    return `~${mins} minute${mins > 1 ? 's' : ''}`;
  };

  const handleSubmit = async (e) => {
    e.preventDefault();
    if (!file || !selectedProject) {
      setError("Please select both a project and a file.");
      return;
    }

    setIsUploading(true);
    setError("");
    setUploadStatus("Preparing upload...");
    setElapsedTime(0);
    uploadStartRef.current = Date.now();
    
    // Start elapsed time counter
    timerRef.current = setInterval(() => {
      const elapsed = Math.floor((Date.now() - uploadStartRef.current) / 1000);
      setElapsedTime(elapsed);
    }, 1000);

    try {
      // Step 1: Upload file
      setUploadStatus("Uploading file to server... (this may take a few minutes for large files)");
      
      const uploadResult = await base44.integrations.Core.UploadFile({ file });
      
      if (!uploadResult || !uploadResult.file_url) {
        throw new Error("Upload failed - server did not return a file URL");
      }
      
      const fileUrl = uploadResult.file_url;
      setUploadStatus("File uploaded! Creating design record...");
      
      // Step 2: Get next version number
      const designs = await base44.entities.Design.filter({ project_id: selectedProject });
      const version = designs.length > 0 ? Math.max(...designs.map(d => d.version)) + 1 : 1;
      
      // Step 3: Deactivate existing active designs
      setUploadStatus("Updating version status...");
      const activeDesigns = designs.filter(d => d.is_active);
      for (const design of activeDesigns) {
        await base44.entities.Design.update(design.id, { is_active: false });
      }
      
      // Step 4: Create new design record
      setUploadStatus("Saving new design version...");
      await base44.entities.Design.create({
        project_id: selectedProject,
        version,
        file_url: fileUrl,
        file_name: file.name,
        file_size: file.size,
        description: description || "",
        is_active: true,
        comments: []
      });
      
      // Success!
      if (timerRef.current) clearInterval(timerRef.current);
      setUploadStatus("Upload complete!");
      setUploadComplete(true);
      
      // Reset form after delay
      setTimeout(() => {
        setFile(null);
        setSelectedProject("");
        setDescription("");
        setUploadComplete(false);
        setUploadStatus("");
        setElapsedTime(0);
        setIsUploading(false);
      }, 3000);

    } catch (err) {
      console.error("Upload error:", err);
      if (timerRef.current) clearInterval(timerRef.current);
      setError(`Upload failed: ${err.message || "Unknown error"}. Please try again.`);
      setUploadStatus("");
      setIsUploading(false);
    }
  };

  const handleRetry = () => {
    setError("");
    setUploadStatus("");
    setElapsedTime(0);
  };

  if (isLoading) {
    return (
      <div className="min-h-screen bg-gradient-to-br from-black via-gray-900 to-red-950/20 flex items-center justify-center">
        <Loader2 className="w-8 h-8 text-red-500 animate-spin" />
      </div>
    );
  }

  return (
    <div className="min-h-screen bg-gradient-to-br from-black via-gray-900 to-red-950/20 p-6">
      <div className="max-w-4xl mx-auto">
        <div className="flex items-center gap-3 mb-8">
          <Button 
            variant="outline" 
            size="icon" 
            onClick={() => navigate(createPageUrl('Dashboard'))} 
            className="border-gray-600 text-gray-300 hover:bg-gray-700/50"
          >
            <ArrowLeft className="w-4 h-4" />
          </Button>
          <FileUp className="w-8 h-8 text-orange-400" />
          <div>
            <h1 className="text-3xl font-bold flame-text">Upload Design Version</h1>
            <p className="text-gray-400">Add or update a 3D model for a project</p>
          </div>
        </div>

        {projects.length === 0 && (
          <Card className="bg-orange-900/20 border-orange-700/50 mb-6">
            <CardContent className="p-4 flex items-start gap-3">
              <AlertCircle className="w-5 h-5 text-orange-400 mt-0.5" />
              <div>
                <p className="text-orange-300 font-medium">No Active Projects</p>
                <p className="text-orange-400/70 text-sm">You need to create a project before uploading designs.</p>
              </div>
            </CardContent>
          </Card>
        )}

        <motion.div initial={{ opacity: 0, y: 20 }} animate={{ opacity: 1, y: 0 }}>
          <Card className="bg-black/40 border-red-800/50 hell-glow">
            <CardHeader>
              <CardTitle className="text-white flex items-center gap-2">
                <Flame className="w-5 h-5 text-red-400" />
                New Version Details
              </CardTitle>
            </CardHeader>
            <CardContent>
              <form onSubmit={handleSubmit} className="space-y-6">
                {/* Project Selection */}
                <div className="space-y-2">
                  <Label htmlFor="project" className="text-gray-300">Select Project</Label>
                  <Select 
                    value={selectedProject} 
                    onValueChange={setSelectedProject} 
                    disabled={projects.length === 0 || isUploading}
                  >
                    <SelectTrigger className="bg-gray-800/50 border-gray-700 text-white">
                      <SelectValue placeholder="Choose a project" />
                    </SelectTrigger>
                    <SelectContent className="bg-gray-800 border-gray-700">
                      {projects.map((project) => (
                        <SelectItem key={project.id} value={project.id} className="text-white">
                          {project.name} - {getCustomerName(project.customer_id)}
                        </SelectItem>
                      ))}
                    </SelectContent>
                  </Select>
                </div>

                {/* File Upload Area */}
                <div className="space-y-2">
                  <Label className="text-gray-300">3D Model File (.glb, .gltf only)</Label>
                  <div
                    className={`border-2 border-dashed rounded-lg p-8 text-center transition-all duration-300 ${
                      dragActive 
                        ? "border-red-500 bg-red-500/10" 
                        : "border-gray-600 hover:border-gray-500"
                    } ${isUploading ? 'opacity-50 pointer-events-none' : ''}`}
                    onDragEnter={handleDrag}
                    onDragLeave={handleDrag}
                    onDragOver={handleDrag}
                    onDrop={handleDrop}
                  >
                    <input
                      type="file"
                      id="file-upload"
                      onChange={handleFileChange}
                      accept=".glb,.gltf"
                      className="hidden"
                      disabled={projects.length === 0 || isUploading}
                    />
                    
                    {file ? (
                      <div className="space-y-3">
                        <div className="flex items-center justify-center gap-3">
                          <File className="w-8 h-8 text-orange-400" />
                          <div className="text-left">
                            <p className="font-medium text-white">{file.name}</p>
                            <p className="text-sm text-gray-400">{formatFileSize(file.size)}</p>
                          </div>
                          {!isUploading && (
                            <Button
                              type="button"
                              variant="outline"
                              size="sm"
                              onClick={() => setFile(null)}
                              className="border-gray-600 text-gray-300 hover:bg-gray-700/50"
                            >
                              Remove
                            </Button>
                          )}
                        </div>
                        
                        {/* File info badges */}
                        <div className="flex justify-center gap-3 flex-wrap">
                          <div className="flex items-center gap-1 text-xs bg-gray-800 px-2 py-1 rounded text-gray-300">
                            <HardDrive className="w-3 h-3" />
                            {formatFileSize(file.size)}
                          </div>
                          <div className="flex items-center gap-1 text-xs bg-gray-800 px-2 py-1 rounded text-gray-300">
                            <Clock className="w-3 h-3" />
                            Est. {getEstimatedTime(file.size)}
                          </div>
                        </div>
                      </div>
                    ) : (
                      <div>
                        <UploadIcon className="w-12 h-12 text-gray-500 mx-auto mb-4" />
                        <p className="text-gray-300 mb-2">
                          Drag and drop your 3D model here, or{" "}
                          <label 
                            htmlFor="file-upload" 
                            className={`text-orange-400 ${projects.length === 0 ? 'opacity-50 cursor-not-allowed' : 'cursor-pointer hover:underline'}`}
                          >
                            browse
                          </label>
                        </p>
                        <p className="text-sm text-gray-500">
                          Supports: GLB, GLTF (Max: 600MB)
                        </p>
                      </div>
                    )}
                  </div>
                  
                  {/* Error Display */}
                  {error && (
                    <div className="bg-red-900/20 border border-red-700/50 rounded-lg p-3">
                      <div className="flex items-start gap-2">
                        <AlertCircle className="w-5 h-5 text-red-400 mt-0.5 flex-shrink-0" />
                        <div className="flex-1">
                          <p className="text-red-300 text-sm">{error}</p>
                        </div>
                        <Button
                          type="button"
                          variant="ghost"
                          size="sm"
                          onClick={handleRetry}
                          className="text-red-400 hover:text-red-300 hover:bg-red-900/20 -mt-1"
                        >
                          <RefreshCw className="w-4 h-4 mr-1" />
                          Retry
                        </Button>
                      </div>
                    </div>
                  )}
                  
                  {/* Upload Progress */}
                  {isUploading && (
                    <div className="bg-blue-900/20 border border-blue-700/50 rounded-lg p-4 space-y-4">
                      <div className="flex items-center justify-between">
                        <div className="flex items-center gap-2">
                          {uploadComplete ? (
                            <CheckCircle className="w-5 h-5 text-green-400" />
                          ) : (
                            <Loader2 className="w-5 h-5 text-blue-400 animate-spin" />
                          )}
                          <p className={`text-sm ${uploadComplete ? 'text-green-300' : 'text-blue-300'}`}>
                            {uploadStatus}
                          </p>
                        </div>
                      </div>
                      
                      {/* Animated progress bar */}
                      <div className="w-full bg-gray-700 rounded-full h-2 overflow-hidden">
                        {uploadComplete ? (
                          <div className="bg-green-500 h-2 w-full" />
                        ) : (
                          <div className="bg-gradient-to-r from-blue-600 via-blue-400 to-blue-600 h-2 w-full animate-pulse" 
                               style={{ backgroundSize: '200% 100%', animation: 'shimmer 2s linear infinite' }} />
                        )}
                      </div>
                      
                      {/* Timer */}
                      <div className="flex justify-between items-center text-xs text-gray-400">
                        <div className="flex items-center gap-1">
                          <Clock className="w-3 h-3" />
                          Elapsed: {formatTime(elapsedTime)}
                        </div>
                        {!uploadComplete && (
                          <div className="flex items-center gap-1">
                            <Zap className="w-3 h-3 text-yellow-400" />
                            <span className="text-yellow-400">Processing...</span>
                          </div>
                        )}
                      </div>
                      
                      {/* Large file warning */}
                      {file && file.size > 100 * 1024 * 1024 && !uploadComplete && (
                        <p className="text-yellow-400/80 text-xs text-center">
                          ‚ö†Ô∏è Large files may take several minutes. Please don't close this page.
                        </p>
                      )}
                    </div>
                  )}
                  
                  {/* Tips */}
                  <div className="bg-blue-900/20 border border-blue-700/50 rounded-lg p-3">
                    <p className="text-blue-300 text-sm">
                      üí° <strong>Tip:</strong> GLB format works best for 3D viewing. You can convert OBJ/STL files to GLB using free tools like Blender.
                    </p>
                  </div>
                </div>

                {/* Description */}
                <div className="space-y-2">
                  <Label htmlFor="description" className="text-gray-300">Version Description</Label>
                  <Textarea
                    id="description"
                    value={description}
                    onChange={(e) => setDescription(e.target.value)}
                    className="bg-gray-800/50 border-gray-700 text-white"
                    placeholder="Describe what's new in this version..."
                    rows={3}
                    disabled={projects.length === 0 || isUploading}
                  />
                </div>

                {/* Submit Button */}
                <div className="flex justify-end">
                  <Button 
                    type="submit" 
                    disabled={!file || !selectedProject || isUploading || !!error || projects.length === 0}
                    className="bg-gradient-to-r from-red-600 to-red-700 hover:from-red-700 hover:to-red-800 text-white px-8"
                  >
                    {isUploading ? (
                      <><Loader2 className="w-4 h-4 mr-2 animate-spin" />Uploading...</>
                    ) : uploadComplete ? (
                      <><CheckCircle className="w-4 h-4 mr-2" />Uploaded!</>
                    ) : (
                      <><UploadIcon className="w-4 h-4 mr-2" />Upload Design</>
                    )}
                  </Button>
                </div>
              </form>
            </CardContent>
          </Card>
        </motion.div>

        {/* Quick Actions Card */}
        <motion.div 
          initial={{ opacity: 0, y: 20 }} 
          animate={{ opacity: 1, y: 0 }}
          transition={{ delay: 0.1 }}
          className="mt-6"
        >
          <Card className="bg-black/20 border-gray-800">
            <CardContent className="p-4">
              <div className="flex flex-wrap gap-3 justify-center">
                <Button
                  variant="outline"
                  size="sm"
                  onClick={() => navigate(createPageUrl('Customers'))}
                  className="border-gray-600 text-gray-300 hover:bg-gray-700/50"
                >
                  Manage Customers
                </Button>
                <Button
                  variant="outline"
                  size="sm"
                  onClick={() => navigate(createPageUrl('Dashboard'))}
                  className="border-gray-600 text-gray-300 hover:bg-gray-700/50"
                >
                  Dashboard
                </Button>
              </div>
            </CardContent>
          </Card>
        </motion.div>
      </div>

      {/* CSS for shimmer animation */}
      <style>{`
        @keyframes shimmer {
          0% { background-position: 200% 0; }
          100% { background-position: -200% 0; }
        }
      `}</style>
    </div>
  );
}
