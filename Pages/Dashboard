import React, { useState, useEffect } from "react";
import { base44 } from "@/api/base44Client";
import { Card, CardContent, CardHeader, CardTitle } from "@/components/ui/card";
import { Button } from "@/components/ui/button";
import { Users, Upload, Flame, Briefcase, Key, LogOut, RefreshCw, TrendingUp, Clock, DollarSign, Eye, Copy, Check, Calendar, AlertCircle } from "lucide-react";
import { Link, useNavigate } from "react-router-dom";
import { createPageUrl } from "@/utils";
import { Badge } from "@/components/ui/badge";
import { motion } from "framer-motion";

export default function Dashboard() {
  const navigate = useNavigate();
  const [stats, setStats] = useState({
    totalCustomers: 0,
    totalProjects: 0,
    totalDesigns: 0,
    activeProjects: 0,
    totalRevenue: 0,
    totalHours: 0
  });
  const [recentCustomers, setRecentCustomers] = useState([]);
  const [recentProjects, setRecentProjects] = useState([]);
  const [isLoading, setIsLoading] = useState(true);
  const [copiedCode, setCopiedCode] = useState(null);

  useEffect(() => {
    const adminAuth = localStorage.getItem('dsp_admin_auth');
    if (adminAuth !== 'authenticated') {
      navigate(createPageUrl('AdminLogin'));
      return;
    }

    loadDashboardData();
  }, [navigate]);

  const loadDashboardData = async () => {
    setIsLoading(true);
    try {
      const [customers, projects, designs] = await Promise.all([
        base44.entities.Customer.list('-created_date'),
        base44.entities.Project.list('-created_date'),
        base44.entities.Design.list('-created_date')
      ]);

      const activeProjects = projects.filter(p => p.status === 'active');
      const totalRevenue = projects.reduce((sum, p) => sum + (p.cost || 0), 0);
      const totalHours = projects.reduce((sum, p) => sum + (p.total_hours || 0), 0);

      setStats({
        totalCustomers: customers.length,
        totalProjects: projects.length,
        totalDesigns: designs.length,
        activeProjects: activeProjects.length,
        totalRevenue,
        totalHours
      });
      setRecentCustomers(customers.slice(0, 5));
      setRecentProjects(projects.slice(0, 5));
    } catch (error) {
      console.error("Error loading dashboard:", error);
    } finally {
      setIsLoading(false);
    }
  };

  const handleLogout = () => {
    if (window.confirm('Are you sure you want to logout?')) {
      localStorage.removeItem('dsp_admin_auth');
      localStorage.removeItem('dsp_admin_email');
      navigate(createPageUrl('CustomerView'));
    }
  };

  const copyAccessCode = (code) => {
    navigator.clipboard.writeText(code);
    setCopiedCode(code);
    setTimeout(() => setCopiedCode(null), 2000);
  };

  const StatCard = ({ title, value, icon: Icon, color, subtitle }) => (
    <motion.div initial={{ opacity: 0, y: 20 }} animate={{ opacity: 1, y: 0 }}>
      <Card className="bg-black/40 border-gray-800 backdrop-blur-sm hover:bg-black/60 transition-all duration-300 hell-glow">
        <CardHeader className="pb-3">
          <div className="flex items-center justify-between">
            <div>
              <p className="text-gray-400 text-sm font-medium">{title}</p>
              <CardTitle className="text-2xl font-bold text-white mt-2">
                {isLoading ? "..." : value}
              </CardTitle>
              {subtitle && <p className="text-xs text-gray-500 mt-1">{subtitle}</p>}
            </div>
            <div className={`p-3 rounded-xl ${color} bg-opacity-20`}>
              <Icon className={`w-6 h-6 ${color.replace('bg-', 'text-')}`} />
            </div>
          </div>
        </CardHeader>
      </Card>
    </motion.div>
  );

  return (
    <div className="min-h-screen bg-gradient-to-br from-black via-gray-900 to-red-950/20 p-6">
      <div className="max-w-7xl mx-auto">
        {/* Header */}
        <div className="flex flex-col sm:flex-row justify-between items-start sm:items-center mb-8 gap-4">
          <div className="flex items-center gap-3">
            <Flame className="w-8 h-8 text-orange-500" />
            <div>
              <h1 className="text-3xl md:text-4xl font-bold flame-text">Admin Dashboard</h1>
              <p className="text-gray-400">Manage your 3D design business</p>
            </div>
          </div>
          <div className="flex gap-2">
            <Button 
              onClick={loadDashboardData}
              variant="outline"
              size="sm"
              className="border-gray-600 text-gray-300 hover:bg-gray-700/50"
              disabled={isLoading}
            >
              <RefreshCw className={`w-4 h-4 ${isLoading ? 'animate-spin' : ''}`} />
            </Button>
            <Button 
              onClick={handleLogout}
              variant="outline"
              size="sm"
              className="border-red-600 text-red-400 hover:bg-red-600/20"
            >
              <LogOut className="w-4 h-4 mr-2" />
              Logout
            </Button>
          </div>
        </div>

        {/* Stats Grid */}
        <div className="grid grid-cols-2 md:grid-cols-3 lg:grid-cols-6 gap-4 mb-8">
          <StatCard title="Customers" value={stats.totalCustomers} icon={Users} color="bg-red-500" />
          <StatCard title="Projects" value={stats.totalProjects} icon={Briefcase} color="bg-orange-500" />
          <StatCard title="Active" value={stats.activeProjects} icon={TrendingUp} color="bg-green-500" />
          <StatCard title="Designs" value={stats.totalDesigns} icon={Upload} color="bg-yellow-500" />
          <StatCard title="Revenue" value={`$${stats.totalRevenue.toLocaleString()}`} icon={DollarSign} color="bg-emerald-500" />
          <StatCard title="Hours" value={stats.totalHours} icon={Clock} color="bg-blue-500" />
        </div>

        {/* Quick Actions */}
        <div className="grid md:grid-cols-3 gap-4 mb-8">
          <Link to={createPageUrl("Customers")} className="block">
            <Card className="bg-gradient-to-r from-red-600/20 to-red-700/20 border-red-600/50 hover:from-red-600/30 hover:to-red-700/30 transition-all duration-300 cursor-pointer hell-glow h-full">
              <CardContent className="p-6">
                <div className="flex items-center gap-4">
                  <Users className="w-8 h-8 text-red-400" />
                  <div>
                    <h3 className="font-bold text-white text-lg">Manage Customers</h3>
                    <p className="text-gray-400 text-sm">View and manage all clients</p>
                  </div>
                </div>
              </CardContent>
            </Card>
          </Link>

          <Link to={createPageUrl("Upload")} className="block">
            <Card className="bg-gradient-to-r from-orange-600/20 to-orange-700/20 border-orange-600/50 hover:from-orange-600/30 hover:to-orange-700/30 transition-all duration-300 cursor-pointer hell-glow h-full">
              <CardContent className="p-6">
                <div className="flex items-center gap-4">
                  <Upload className="w-8 h-8 text-orange-400" />
                  <div>
                    <h3 className="font-bold text-white text-lg">Upload Design</h3>
                    <p className="text-gray-400 text-sm">Add new 3D models</p>
                  </div>
                </div>
              </CardContent>
            </Card>
          </Link>

          <Link to={createPageUrl("CustomerView")} className="block">
            <Card className="bg-gradient-to-r from-blue-600/20 to-blue-700/20 border-blue-600/50 hover:from-blue-600/30 hover:to-blue-700/30 transition-all duration-300 cursor-pointer hell-glow h-full">
              <CardContent className="p-6">
                <div className="flex items-center gap-4">
                  <Eye className="w-8 h-8 text-blue-400" />
                  <div>
                    <h3 className="font-bold text-white text-lg">Customer Portal</h3>
                    <p className="text-gray-400 text-sm">View as customer</p>
                  </div>
                </div>
              </CardContent>
            </Card>
          </Link>
        </div>

        {/* Recent Activity */}
        <div className="grid lg:grid-cols-2 gap-6">
          {/* Recent Customers */}
          <Card className="bg-gradient-to-br from-red-900/20 to-red-800/10 border-red-800/50 hell-glow">
            <CardHeader className="flex flex-row items-center justify-between">
              <CardTitle className="text-white flex items-center gap-2">
                <Users className="w-5 h-5 text-red-400" />
                Recent Customers
              </CardTitle>
              <Link to={createPageUrl("Customers")}>
                <Button variant="ghost" size="sm" className="text-gray-400 hover:text-white">
                  View All
                </Button>
              </Link>
            </CardHeader>
            <CardContent>
              <div className="space-y-3">
                {recentCustomers.map((customer) => (
                  <div key={customer.id} className="flex items-center justify-between p-3 bg-black/30 rounded-lg border border-gray-700/50 hover:bg-black/50 transition-colors">
                    <div className="flex items-center gap-3">
                      <div className="w-10 h-10 bg-gradient-to-r from-red-500 to-orange-500 rounded-full flex items-center justify-center">
                        <span className="text-white font-bold">{customer.name.charAt(0).toUpperCase()}</span>
                      </div>
                      <div>
                        <p className="font-medium text-white">{customer.name}</p>
                        <p className="text-xs text-gray-400">{customer.email}</p>
                      </div>
                    </div>
                    <Badge 
                      variant="outline" 
                      className="border-orange-600 text-orange-400 font-mono cursor-pointer hover:bg-orange-600/20"
                      onClick={() => copyAccessCode(customer.access_code)}
                    >
                      <Key className="w-3 h-3 mr-1" />
                      {customer.access_code}
                      {copiedCode === customer.access_code ? (
                        <Check className="w-3 h-3 ml-1" />
                      ) : (
                        <Copy className="w-3 h-3 ml-1" />
                      )}
                    </Badge>
                  </div>
                ))}
                {recentCustomers.length === 0 && !isLoading && (
                  <div className="text-center py-6">
                    <AlertCircle className="w-8 h-8 text-gray-600 mx-auto mb-2" />
                    <p className="text-gray-500">No customers yet</p>
                    <Link to={createPageUrl("Customers")}>
                      <Button size="sm" className="mt-2 bg-red-600 hover:bg-red-700">Add First Customer</Button>
                    </Link>
                  </div>
                )}
              </div>
            </CardContent>
          </Card>

          {/* Recent Projects */}
          <Card className="bg-gradient-to-br from-orange-900/20 to-orange-800/10 border-orange-800/50 hell-glow">
            <CardHeader className="flex flex-row items-center justify-between">
              <CardTitle className="text-white flex items-center gap-2">
                <Briefcase className="w-5 h-5 text-orange-400" />
                Recent Projects
              </CardTitle>
            </CardHeader>
            <CardContent>
              <div className="space-y-3">
                {recentProjects.map((project) => (
                  <div 
                    key={project.id} 
                    className="flex items-center justify-between p-3 bg-black/30 rounded-lg border border-gray-700/50 hover:bg-black/50 transition-colors cursor-pointer"
                    onClick={() => navigate(`${createPageUrl('ProjectDesigns')}?projectId=${project.id}`)}
                  >
                    <div>
                      <p className="font-medium text-white">{project.name}</p>
                      <div className="flex gap-2 mt-1">
                        <Badge 
                          variant="outline" 
                          className={`text-xs ${
                            project.status === 'active' 
                              ? 'border-green-600 text-green-400' 
                              : project.status === 'completed'
                              ? 'border-blue-600 text-blue-400'
                              : 'border-gray-600 text-gray-400'
                          }`}
                        >
                          {project.status}
                        </Badge>
                        {project.cost > 0 && (
                          <Badge variant="outline" className="text-xs border-yellow-600 text-yellow-400">
                            ${project.cost}
                          </Badge>
                        )}
                      </div>
                    </div>
                    <Eye className="w-4 h-4 text-gray-400" />
                  </div>
                ))}
                {recentProjects.length === 0 && !isLoading && (
                  <div className="text-center py-6">
                    <AlertCircle className="w-8 h-8 text-gray-600 mx-auto mb-2" />
                    <p className="text-gray-500">No projects yet</p>
                  </div>
                )}
              </div>
            </CardContent>
          </Card>
        </div>
      </div>
    </div>
  );
}
