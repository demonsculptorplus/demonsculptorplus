import React, { useState, useEffect, useCallback } from 'react';
import { useSearchParams, useNavigate } from 'react-router-dom';
import { base44 } from '@/api/base44Client';
import { Button } from '@/components/ui/button';
import { Card, CardContent } from '@/components/ui/card';
import { ArrowLeft, Layers, CheckCircle2, AlertCircle, Upload, FileText, Download, Trash2, RefreshCw } from 'lucide-react';
import { Badge } from '@/components/ui/badge';
import { createPageUrl } from '@/utils';
import { motion, AnimatePresence } from 'framer-motion';

import AdminModelViewer from '../components/AdminModelViewer';

export default function ProjectDesigns() {
    const navigate = useNavigate();
    const [searchParams] = useSearchParams();
    const projectId = searchParams.get('projectId');
    
    const [project, setProject] = useState(null);
    const [customer, setCustomer] = useState(null);
    const [designs, setDesigns] = useState([]);
    const [selectedDesign, setSelectedDesign] = useState(null);
    const [isLoading, setIsLoading] = useState(true);
    const [error, setError] = useState(null);

    const loadData = useCallback(async () => {
        const adminAuth = localStorage.getItem('dsp_admin_auth');
        if (adminAuth !== 'authenticated') {
            navigate(createPageUrl('AdminLogin'));
            return;
        }

        if (!projectId) {
            setError("No project ID provided");
            setIsLoading(false);
            setTimeout(() => navigate(createPageUrl('Customers')), 2000);
            return;
        }
        
        try {
            const [projectData, designsData] = await Promise.all([
                base44.entities.Project.get(projectId),
                base44.entities.Design.filter({ project_id: projectId }, '-version')
            ]);
            
            const customerData = await base44.entities.Customer.get(projectData.customer_id);
            
            setProject(projectData);
            setCustomer(customerData);
            setDesigns(designsData);
            
            const activeDesign = designsData.find(d => d.is_active) || designsData[0];
            setSelectedDesign(activeDesign);
            
        } catch (err) {
            console.error("Error loading project data:", err);
            setError(err.message || "Failed to load project data");
        } finally {
            setIsLoading(false);
        }
    }, [projectId, navigate]);

    useEffect(() => {
        loadData();
    }, [loadData]);

    const handleCommentsUpdate = async (comments) => {
        if (!selectedDesign) return;
        try {
            const updatedDesign = await base44.entities.Design.update(selectedDesign.id, { comments });
            setSelectedDesign(updatedDesign);
            setDesigns(designs.map(d => d.id === updatedDesign.id ? updatedDesign : d));
        } catch(err) {
            console.error("Failed to update comments:", err);
        }
    };

    const handleSetActiveVersion = async (design) => {
        try {
            // Deactivate all other designs
            for (const d of designs) {
                if (d.is_active && d.id !== design.id) {
                    await base44.entities.Design.update(d.id, { is_active: false });
                }
            }
            await base44.entities.Design.update(design.id, { is_active: true });
            loadData();
        } catch (err) {
            console.error("Error setting active version:", err);
        }
    };

    const handleDeleteDesign = async (design) => {
        if (!window.confirm(`Are you sure you want to delete Version ${design.version}? This cannot be undone.`)) {
            return;
        }
        try {
            await base44.entities.Design.delete(design.id);
            loadData();
        } catch (err) {
            console.error("Error deleting design:", err);
            alert("Failed to delete design");
        }
    };

    const handleDownloadDesign = (design) => {
        window.open(design.file_url, '_blank');
    };

    const handleBack = () => {
        if (project && project.customer_id) {
            navigate(`${createPageUrl('Projects')}?customerId=${project.customer_id}`);
        } else {
            navigate(createPageUrl('Customers'));
        }
    };

    const formatDate = (dateString) => {
        if (!dateString) return '';
        return new Date(dateString).toLocaleDateString('en-US', { 
            month: 'short', 
            day: 'numeric',
            year: 'numeric'
        });
    };

    if (isLoading) {
        return (
            <div className="min-h-screen bg-black flex items-center justify-center">
                <div className="text-center">
                    <div className="animate-spin rounded-full h-16 w-16 border-b-2 border-red-500 mx-auto mb-4"></div>
                    <p className="text-gray-400">Loading project designs...</p>
                </div>
            </div>
        );
    }

    if (error || !project || !customer) {
        return (
            <div className="min-h-screen bg-black flex items-center justify-center">
                <Card className="bg-red-900/20 border-red-700/50 max-w-md">
                    <CardContent className="p-8 text-center">
                        <AlertCircle className="w-12 h-12 text-red-400 mx-auto mb-4" />
                        <h2 className="text-xl font-bold text-red-400 mb-2">Error Loading Project</h2>
                        <p className="text-gray-400 mb-4">{error || "Project not found"}</p>
                        <Button onClick={() => navigate(createPageUrl('Customers'))} className="bg-red-600 hover:bg-red-700">
                            <ArrowLeft className="w-4 h-4 mr-2" />
                            Back to Customers
                        </Button>
                    </CardContent>
                </Card>
            </div>
        );
    }

    return (
        <div className="h-screen flex flex-col bg-black">
            <header className="bg-black/50 backdrop-blur-sm border-b border-gray-800 p-4 shrink-0">
                <div className="max-w-screen-2xl mx-auto flex flex-col sm:flex-row justify-between items-start sm:items-center gap-4">
                    <div className="flex items-center gap-4">
                        <Button 
                            variant="outline" 
                            size="sm" 
                            onClick={handleBack} 
                            className="border-gray-600 text-gray-300 hover:bg-gray-700/50"
                        >
                            <ArrowLeft className="w-4 h-4 mr-2" />
                            Back
                        </Button>
                        <div>
                            <h1 className="text-xl md:text-2xl font-bold text-white">{project.name}</h1>
                            <p className="text-gray-400 text-sm">{customer.name} â€¢ {designs.length} Version{designs.length !== 1 ? 's' : ''}</p>
                        </div>
                    </div>
                    <div className="flex items-center gap-2 flex-wrap">
                        <Button
                            variant="outline"
                            size="sm"
                            onClick={loadData}
                            className="border-gray-600 text-gray-300 hover:bg-gray-700/50"
                        >
                            <RefreshCw className="w-4 h-4" />
                        </Button>
                        <Button
                            size="sm"
                            onClick={() => navigate(createPageUrl('Upload'))}
                            className="bg-orange-600 hover:bg-orange-700"
                        >
                            <Upload className="w-4 h-4 mr-2" />
                            Upload New
                        </Button>
                        {designs.length > 1 && (
                            <div className="flex items-center gap-1">
                                {designs.map((d) => (
                                    <Button 
                                        key={d.id} 
                                        variant={d.id === selectedDesign?.id ? 'default' : 'outline'} 
                                        size="sm" 
                                        onClick={() => setSelectedDesign(d)} 
                                        className={d.id === selectedDesign?.id ? "bg-red-600 hover:bg-red-700 text-white" : "border-gray-600 text-gray-300 hover:bg-gray-700/50"}
                                    >
                                        v{d.version}
                                        {d.is_active && <CheckCircle2 className="w-3 h-3 ml-1" />}
                                    </Button>
                                ))}
                            </div>
                        )}
                    </div>
                </div>
            </header>

            <div className="flex-1 flex overflow-hidden">
                <aside className="w-72 lg:w-80 bg-black/30 border-r border-gray-800 p-4 overflow-y-auto hidden md:block">
                    <h2 className="text-lg font-bold text-white mb-4 flex items-center gap-2">
                        <Layers className="w-5 h-5 text-red-400" />
                        Design Versions
                    </h2>
                    <div className="space-y-3">
                        <AnimatePresence>
                            {designs.map((design) => (
                                <motion.div
                                    key={design.id}
                                    initial={{ opacity: 0, x: -20 }}
                                    animate={{ opacity: 1, x: 0 }}
                                    exit={{ opacity: 0, x: -20 }}
                                >
                                    <Card 
                                        className={`cursor-pointer transition-all duration-300 ${
                                            selectedDesign?.id === design.id 
                                                ? 'bg-red-900/30 border-red-600 hell-glow' 
                                                : 'bg-black/30 border-gray-800 hover:bg-black/50'
                                        }`}
                                        onClick={() => setSelectedDesign(design)}
                                    >
                                        <CardContent className="p-4">
                                            <div className="flex justify-between items-start mb-2">
                                                <h3 className="font-bold text-white">Version {design.version}</h3>
                                                {design.is_active && (
                                                    <Badge className="bg-green-600 text-xs">Active</Badge>
                                                )}
                                            </div>
                                            <p className="text-sm text-gray-400 mb-1 truncate">{design.file_name}</p>
                                            {design.file_size && (
                                                <p className="text-xs text-gray-500 flex items-center gap-1">
                                                    <FileText className="w-3 h-3" />
                                                    {(design.file_size / (1024 * 1024)).toFixed(1)} MB
                                                </p>
                                            )}
                                            {design.created_date && (
                                                <p className="text-xs text-gray-500 mt-1">
                                                    {formatDate(design.created_date)}
                                                </p>
                                            )}
                                            {design.description && (
                                                <p className="text-xs text-gray-500 mt-2 line-clamp-2">{design.description}</p>
                                            )}
                                            <div className="flex justify-between items-center mt-3">
                                                <Badge variant="outline" className="text-xs border-gray-600 text-gray-400">
                                                    {(design.comments || []).length} Comments
                                                </Badge>
                                                <div className="flex gap-1">
                                                    <Button
                                                        size="icon"
                                                        variant="ghost"
                                                        onClick={(e) => {
                                                            e.stopPropagation();
                                                            handleDownloadDesign(design);
                                                        }}
                                                        className="h-7 w-7 text-blue-400 hover:text-blue-300 hover:bg-blue-900/20"
                                                        title="Download file"
                                                    >
                                                        <Download className="w-3 h-3" />
                                                    </Button>
                                                    {!design.is_active && (
                                                        <>
                                                            <Button
                                                                size="icon"
                                                                variant="ghost"
                                                                onClick={(e) => {
                                                                    e.stopPropagation();
                                                                    handleSetActiveVersion(design);
                                                                }}
                                                                className="h-7 w-7 text-green-400 hover:text-green-300 hover:bg-green-900/20"
                                                                title="Set as active"
                                                            >
                                                                <CheckCircle2 className="w-3 h-3" />
                                                            </Button>
                                                            <Button
                                                                size="icon"
                                                                variant="ghost"
                                                                onClick={(e) => {
                                                                    e.stopPropagation();
                                                                    handleDeleteDesign(design);
                                                                }}
                                                                className="h-7 w-7 text-red-400 hover:text-red-300 hover:bg-red-900/20"
                                                                title="Delete version"
                                                            >
                                                                <Trash2 className="w-3 h-3" />
                                                            </Button>
                                                        </>
                                                    )}
                                                </div>
                                            </div>
                                        </CardContent>
                                    </Card>
                                </motion.div>
                            ))}
                        </AnimatePresence>
                        {designs.length === 0 && (
                            <Card className="bg-black/20 border-gray-800 border-dashed">
                                <CardContent className="p-8 text-center">
                                    <Layers className="w-8 h-8 text-gray-600 mx-auto mb-2" />
                                    <p className="text-gray-500 text-sm mb-4">No designs uploaded yet</p>
                                    <Button 
                                        onClick={() => navigate(createPageUrl('Upload'))}
                                        className="bg-orange-600 hover:bg-orange-700"
                                        size="sm"
                                    >
                                        <Upload className="w-4 h-4 mr-2" />
                                        Upload First Design
                                    </Button>
                                </CardContent>
                            </Card>
                        )}
                    </div>
                </aside>

                <main className="flex-1 overflow-hidden relative">
                    {selectedDesign && selectedDesign.file_url ? (
                        <AdminModelViewer
                            modelUrl={selectedDesign.file_url}
                            comments={selectedDesign.comments || []}
                            onCommentsUpdate={handleCommentsUpdate}
                            customer={customer}
                        />
                    ) : (
                        <div className="h-full flex items-center justify-center bg-black">
                            <div className="text-center max-w-md p-6">
                                <AlertCircle className="w-12 h-12 text-yellow-400 mx-auto mb-4" />
                                <p className="text-yellow-400 mb-2">No 3D Model Available</p>
                                <p className="text-gray-400 text-sm mb-4">
                                    {selectedDesign ? 'This version has no 3D file uploaded yet.' : 'Select a version to view'}
                                </p>
                                <Button 
                                    onClick={() => navigate(createPageUrl('Upload'))}
                                    className="bg-orange-600 hover:bg-orange-700"
                                >
                                    <Upload className="w-4 h-4 mr-2" />
                                    Upload Design
                                </Button>
                            </div>
                        </div>
                    )}
                </main>
            </div>
        </div>
    );
}
